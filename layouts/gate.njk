{% extends "base.njk" %}

{% block content %}
<div class="gate">
  <h2 class="gate-title">{{ title }}</h2>

  <div class="symbol-row">
    {#<p><strong>Symbol:</strong> ${{ symbol }}$</p> #}
    <p>Symbol</p>
    <div class="symbol-box">${{ symbol }}$</div>
  </div>

  <div>
    {{ content | safe }}
  </div>

  {% if groups %}
    <p>This group is contained in the following groups:</p>
    <ul>
      {% for group in groups %}
      <li><a href="/groups/{{ group }}">{{ group }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  <a class="back-to-home" href="/">Back to home</a>
</div>
{% endblock %}
